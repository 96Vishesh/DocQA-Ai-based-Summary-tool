# Backend Environment Variables
# Copy this file to .env and fill in your actual values

# OpenAI API Key (required for LLM and Whisper transcription)
OPENAI_API_KEY=your-openai-api-key-here

# JWT Secret (for authentication)
JWT_SECRET=your-super-secret-key-that-should-be-at-least-256-bits-long-for-security

# PostgreSQL Database
DB_HOST=localhost
DB_PORT=5432
DB_NAME=docqa
DB_USERNAME=postgres
DB_PASSWORD=postgres

# Redis (for caching)
REDIS_HOST=localhost
REDIS_PORT=6379

# Upload Directory
UPLOAD_DIR=./uploads
